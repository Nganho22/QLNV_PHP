    <script>
    function showPopup(message, success) {
        var popup = document.getElementById('popup');
        var popupMessage = document.getElementById('popupMessage');
        var closeButton = document.querySelector('.close-popup-btn');

        popupMessage.textContent = message;
        popup.style.display = 'flex';

        if (success && closeButton) {
            closeButton.onclick = function() {
                window.location.reload(); 
            };
        }
    }

    function closePopup() {
        document.getElementById('popup').style.display = 'none'; 
    }

    function setTrangThai(trangThai) {
        document.getElementById('trangThai').value = trangThai;
        handleFormSubmit(document.getElementById('phanHoiForm'));
    }

    function handleFormSubmit(formElement) {
        var ngayPhanHoiElement = formElement.querySelector('[name="ngayPhanHoi"]');
        ngayPhanHoiElement.value = formatDateForDatabase(ngayPhanHoiElement.value);
        
        var formData = new FormData(formElement);

        fetch(formElement.action, { 
            method: 'POST',
            body: formData
        })
        .then(response => response.text())
        .then(text => {
            console.log(text);
            try {
                var data = JSON.parse(text);
                console.log(data);
                if (!data.success) {
                    showPopup(data.message, false);
                } else {
                    showPopup(data.message, true);
                }
            } catch (e) {
                console.error('Lỗi phân tích JSON:', e);
                showPopup('Đã xảy ra lỗi khi xử lý dữ liệu!', false);
            }
        })
        .catch(error => {
            console.error('Đã xảy ra lỗi:', error);
            showPopup('Đã xảy ra lỗi khi gửi form!', false);
        });
    }

    function setCurrentDate() {
        var today = new Date();
        var formattedDate = formatDate(today);
        document.getElementById('ngayPhanHoi').value = formattedDate;
    }

    function formatDate(date) {
        var day = ("0" + date.getDate()).slice(-2);
        var month = ("0" + (date.getMonth() + 1)).slice(-2);
        var year = date.getFullYear();
        return day + '/' + month + '/' + year;
    }

    function formatDateForDatabase(date) {
        var parts = date.split('/'); 
        return parts[2] + '-' + parts[1] + '-' + parts[0]; 
    }

    document.addEventListener('DOMContentLoaded', function() { 
        setCurrentDate();
    });
</script>

