    <script>
        $(document).ready(function() {
    // Xử lý phân trang cho yêu cầu chờ duyệt
    $(document).on('click', '#pending-pagination .page-link', function(e) {
        e.preventDefault();
        var page = $(this).data('page');
        loadPendingRequests(page, $(this));
    });

    // Xử lý phân trang cho yêu cầu đã duyệt
    $(document).on('click', '#approved-pagination .page-link', function(e) {
        e.preventDefault();
        var page = $(this).data('page');
        loadApprovedRequests(page, $(this));
    });

    function loadPendingRequests(page, element) {
        $.ajax({
            url: 'index.php?action=GetRequestPage&ajax=true&pagePending=' + page,
            method: 'GET',
            success: function(response) {
                var data = JSON.parse(response);
                $('#pending-requests-table tbody').html(data.pendingHtml);
                $('#pending-pagination').html(data.pendingPagination);

                // Cập nhật trạng thái active
                var updatedPagination = $('#pending-pagination .page-link[data-page="' + page + '"]');
                updatedPagination.parent().addClass('active');
            },
            error: function() {
                console.error('Không thể tải dữ liệu');
            }
        });
    }

    function loadApprovedRequests(page, element) {
        $.ajax({
            url: 'index.php?action=GetRequestPage&ajax=true&pageApproved=' + page,
            method: 'GET',
            success: function(response) {
                var data = JSON.parse(response);
                $('#approved-requests-table tbody').html(data.approvedHtml);
                $('#approved-pagination').html(data.approvedPagination);

                // Cập nhật trạng thái active
                var updatedPagination = $('#approved-pagination .page-link[data-page="' + page + '"]');
                updatedPagination.parent().addClass('active');
            },
            error: function() {
                console.error('Không thể tải dữ liệu');
            }
        });
    }

    $('.write-request').on('click', function(e) {
            e.preventDefault();
            var formId = $(this).data('req');
            var loaiReq = $(this).attr('loai-req');
            
            // Ẩn tất cả các form khác
            $('.request-form').hide();
            
            // Hiển thị form tương ứng
            var formElement = $('#' + formId);
            formElement.show();
            formElement[0].scrollIntoView({ behavior: 'smooth' });

            //Lấy loại đơn 
            formElement.find('#loai').val(loaiReq); 

            //Lấy thời gian
            function formatDate(date) {
                var day = ("0" + date.getDate()).slice(-2);
                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                var year = date.getFullYear();
                return day + '/' + month + '/' + year;
            }

            var today = new Date();
            var formattedDate = formatDate(today);

            formElement.find('[name="ngayGui"]').val(formattedDate);

            //Lấy ds time-sheet
            $.ajax({
            url: 'index.php?action=GetRequestPage&ajax=true',
            method: 'GET',
            success: function(response) {
                var data = JSON.parse(response);
                if (data.timeSheets) {
                    var dropdown = $('#timeSheetDropdown');
                    dropdown.empty();
                    dropdown.append('<option value="">Chọn Time-sheet</option>');
                    $.each(data.timeSheets, function(index, timeSheet) {
                        dropdown.append('<option value="' + timeSheet.Time_sheetID + '">' + timeSheet.ProjectID + ' - ' + timeSheet.Time_sheetID + ' - ' + timeSheet.TenDuAn + '</option>');
                    });
                }
            },
            error: function() {
                console.error('Không thể tải dữ liệu');
            }
        });
    });

    $('#timeSheetDropdown').on('change', function() {
        var timeSheetID = $(this).val();
        if (timeSheetID) {
            $.ajax({
                url: 'index.php?action=GetTimeSheetDetails&timeSheetID=' + timeSheetID,
                method: 'GET',
                success: function(response) {
                    var timeSheet = JSON.parse(response);
                    if (timeSheet) {
                        // Hiển thị thông tin dự án
                        $('#project-info').show();
                        
                        // Cập nhật các trường thông tin
                        $('#projectID').val(timeSheet.ProjectID);
                        $('#ngayGiao').val(timeSheet.NgayGiao);
                        $('#hanChot').val(timeSheet.HanChot);
                        $('#diemThuong').val(timeSheet.DiemThuong);
                        $('#soGioThucHien').val(timeSheet.SoGioThucHien);
                        $('#noiDung').val(timeSheet.NoiDung);
                    }
                },
                error: function() {
                    console.error('Không thể tải dữ liệu');
                }
            });
        } else {
            // Ẩn thông tin dự án nếu không có gì được chọn
            $('#project-info').hide();
        }
    });
});

