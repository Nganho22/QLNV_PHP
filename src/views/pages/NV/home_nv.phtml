    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const days = document.querySelectorAll('.days li');
            const today = new Date().getDate(); // Lấy ngày hiện tại

            // Đánh dấu ngày hôm nay
            days.forEach(day => {
                if (parseInt(day.textContent) === today) {
                    day.classList.add('day-today');
                }

                // Thêm sự kiện nhấp chuột để chọn ngày
                day.addEventListener('click', function() {
                    // Xóa lớp chọn khỏi tất cả các ngày
                    days.forEach(d => d.classList.remove('day-selected'));
                    // Thêm lớp chọn cho ngày được nhấp
                    this.classList.add('day-selected');
                });
            });
        });

